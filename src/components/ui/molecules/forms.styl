@import "../styl/constants.styl";

// forms
.formField
  box-sizing content-box
  position relative
  margin 10px 20px 10px 0

  //&:first-of-type
    //padding-left 0

  & > input,
  & > select
    height inputHeight
    line-height $inputHeight
    width 100%
    font-size 18px
    font-weight 400
    padding 0 16px
    background lightGrey
    border 1px solid grey
    box-sizing border-box

  & > input:focus,
  & > select:focus
    background white
    border pinkLight solid 1px
    outline pinkTooLight solid 1px

.error
  font-size 12px
  color red

.error > input,
.error > select
  border 1px solid red !important
  outline 1px solid red !important

@media mobile
  .formField
    margin 5px 0 5px 0

.placeholder
  position absolute
  width 100%
  left 0
  top 12px
  padding 0 20px
  font-size 18px
  color darkGrey
  background none
  transition all 0.2s ease
  pointer-events none
  box-sizing border-box
  white-space nowrap
  overflow hidden
  text-overflow ellipsis

.placeholderActive
  left 10px
  top 0
  width initial
  font-size 13px
  line-height 13px
  background white
  padding 0 5px
