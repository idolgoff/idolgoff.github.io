@import "../../styl/constants.styl";

.checkbox
  position relative
  font-size 14px
  line-height 14px
  vertical-align center

  input
    opacity 0
    position fixed
    left -9999px
    z-index -1

.pseudoCheckbox
  margin-left 0
  display inline-block
  width 14px
  margin-right 5px

.pseudoCheckbox:after
  color white
  position absolute
  top 50%
  transform translateY(-50%)
  width 10px
  height 10px
  content " "
  padding 1px 2px 3px 2px
  border 1px solid pink
  transition all 0.1s ease

input:checked ~ .pseudoCheckbox:after
  font fa
  font-size 12px
  content "\f00c"
  background pink